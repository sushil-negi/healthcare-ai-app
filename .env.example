# Healthcare AI Application Environment Configuration
# Copy this file to .env and update with your values

# MLOps Platform Integration
MLOPS_MODEL_REGISTRY_URL=http://localhost:8000
MLOPS_EXPERIMENT_TRACKING_URL=http://localhost:8003
MLOPS_FEATURE_STORE_URL=http://localhost:8002
MLOPS_PIPELINE_ORCHESTRATOR_URL=http://localhost:8004
MLOPS_AB_TESTING_URL=http://localhost:8090

# Healthcare AI Configuration
HEALTHCARE_AI_MODEL_PATH=/models/healthcare-ai-v1.0
CRISIS_DETECTION_THRESHOLD=0.85
RESPONSE_TIMEOUT_SECONDS=30
MAX_CONVERSATION_LENGTH=1000
MODEL_WARMUP_ENABLED=true

# Crisis Response Configuration
CRISIS_HOTLINE_API_URL=https://api.988lifeline.org
EMERGENCY_ESCALATION_ENABLED=true
CRISIS_RESPONSE_LOG_LEVEL=INFO
CRISIS_KEYWORDS=suicide,kill myself,end it all,hurt myself,die

# Security & Compliance
HIPAA_COMPLIANCE_MODE=true
PHI_ANONYMIZATION_ENABLED=true
AUDIT_LOGGING_ENABLED=true
SECURITY_HEADERS_ENABLED=true
SESSION_SECRET=your_very_secure_session_secret_here

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
RESPONSE_CACHE_TTL_SECONDS=300
REDIS_MAX_MEMORY=256mb
REQUEST_TIMEOUT_SECONDS=30

# Healthcare Database Configuration (if separate from MLOps)
HEALTHCARE_DB_HOST=localhost
HEALTHCARE_DB_PORT=5433
HEALTHCARE_DB_NAME=healthcare_ai
HEALTHCARE_DB_USER=healthcare
HEALTHCARE_DB_PASSWORD=your_secure_healthcare_db_password

# Web Interface Configuration
WEB_PORT=8080
API_PORT=8001
METRICS_PORT=8082
ENABLE_WEB_INTERFACE=true

# Model Training Configuration
TRAINING_DATA_PATH=/app/data/test_healthcare_training.json
MODEL_OUTPUT_PATH=/app/models
TRAINING_BATCH_SIZE=32
TRAINING_EPOCHS=10
LEARNING_RATE=0.001

# Monitoring & Alerting
PROMETHEUS_ENABLED=true
GRAFANA_DASHBOARD_ENABLED=true
ALERT_WEBHOOK_URL=https://your-healthcare-alert-webhook
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook

# Compliance & Audit
AUDIT_LOG_PATH=/app/logs/audit.log
COMPLIANCE_REPORT_SCHEDULE=0 6 * * *
HIPAA_AUDIT_ENABLED=true
DATA_RETENTION_DAYS=90

# Development/Production Flags
ENVIRONMENT=development
DEBUG_MODE=true
LOG_LEVEL=INFO
ENABLE_SWAGGER_UI=true

# Emergency Configuration
EMERGENCY_CONTACT_EMAIL=healthcare-emergency@your-org.com
EMERGENCY_PHONE=+1-XXX-XXX-XXXX
BACKUP_CRISIS_HOTLINE=1-800-273-8255

# Feature Flags
ENABLE_CRISIS_DETECTION=true
ENABLE_RESPONSE_CACHING=true
ENABLE_METRICS_COLLECTION=true
ENABLE_A_B_TESTING=false

# SSL/TLS Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/healthcare-ai.crt
SSL_KEY_PATH=/etc/ssl/private/healthcare-ai.key
SSL_ENABLED=false